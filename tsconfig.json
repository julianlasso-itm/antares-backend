{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@entities/*": [
        "src/common/modules/persistence/entities/*"
      ],
      "@repositories/*": [
        "src/common/modules/persistence/repositories/*"
      ],
      "@persistence/*": [
        "src/common/modules/persistence/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@assessments/*": [
        "src/modules/assessments/*"
      ],
      "@human-resources/*": [
        "src/modules/human-resources/*"
      ],
      "@knowledge-gaps/*": [
        "src/modules/knowledge-gaps/*"
      ],
      "@projects-management/*": [
        "src/modules/projects-management/*"
      ],
      "@security/*": [
        "src/modules/security/*"
      ],
      "@technologies/*": [
        "src/modules/technologies/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
    },
  }
}